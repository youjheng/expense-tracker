<div class="row mt-5">
  <div class="col-md-4 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">註冊</h1>
      <hr>
      <form action="/users/register" method="POST">
        <div class="mb-3">
          <label for="name" class="mb-2">姓名</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="請輸入姓名" value="{{ name }}">
        </div>
        <div class="mb-3">
          <label for="email" class="mb-2">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="請輸入Email" value="{{ email }}">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="請輸入密碼"
            value="{{ password }}">
        </div>
        <div class="mb-3">
          <label for="confirmPassword" class="mb-2">確認密碼</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="請確認密碼"
            value="{{ confirmPassword }}">
        </div>
        <button type="submit" class="btn btn-outline-primary m-2">註冊</button>
        <a href="/auth/facebook" class="btn btn-outline-primary m-2">Facebook 登入</a>
      </form>
      <hr>
      <p class="lead mt-4">
        已經有帳號? <a href="/users/login">登入</a>
      </p>
    </div>
  </div>
</div>